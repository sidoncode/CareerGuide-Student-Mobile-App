<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Onboarding"
    android:gravity="center_vertical">


    <!-- Design changed by Atul Kumar on 18 June -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_20sdp">

        <!-- Heading and Sub heading -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thanks For Choosing Us,"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What will you get from us now ..."
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black" />





    <!-- Card view for mai content-->
    <androidx.cardview.widget.CardView
        android:outlineAmbientShadowColor="@color/colorPrimary"
        android:outlineSpotShadowColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="10dp"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center|center_vertical">



        <!-- Layout for view and buttons-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <!-- View pager for Images -->

            <androidx.viewpager.widget.ViewPager
                android:layout_margin="5dp"
                android:id="@+id/view_pagera"
                android:layout_width="match_parent"
                android:layout_height="500dp"/>





            <!-- Layout for Buttons-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@android:color/transparent"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp">

                <TextView
                    android:id="@+id/btn_skip"
                    android:gravity="center_vertical"
                    android:layout_weight=".50"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:text="SKIP"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-thin"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_bg_onboard"
                    android:textSize="@dimen/_18sdp"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/btn_next"
                    android:layout_weight=".50"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:text="NEXT"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:fontFamily="sans-serif-thin"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_bg_onboard"
                    android:textSize="@dimen/_18sdp"
                    android:textAlignment="center"
                    android:layout_marginRight="@dimen/_10sdp"/>








                <!-- Old Buttons Layout-->

<!--                <Button-->
