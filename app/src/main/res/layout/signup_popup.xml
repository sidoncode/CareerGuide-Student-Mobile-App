<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--<FrameLayout
        android:background="@color/app_blue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintCircleRadius="10dp"
        >-->

    <androidx.cardview.widget.CardView
        android:background="@drawable/splash_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:padding="10dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_background">


        <ImageButton
            android:id="@+id/ib_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/com_facebook_close"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:contentDescription="close" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <ImageView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:src="@drawable/splash_logo" />
        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:textColor="@color/app_pink"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="New User? Sign-Up to earn Rewards!"
            android:paddingLeft="15sp"
            android:paddingRight="15sp"
            android:paddingTop="15sp"/>
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:textColor="@color/app_pink"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Log-In if your account already exists."
            android:paddingLeft="15sp"
            android:paddingRight="15sp"
            android:paddingBottom="15sp"/>
        <Button
            android:id="@+id/signupb"
            android:padding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/app_pink"
            android:layout_gravity="center_horizontal"
            android:text="Sign-Up / Log-In"/>

    </LinearLayout>
</RelativeLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
